<div class="flex flex-wrap h-screen bg-gradient-to-r from-indigo-500 to-purple-500">
	<a class="text-white ml-5 mt-5" href="/">
		Back
	</a>
	<div class="w-full flex h-screen place-items-center bg-gradient-to-r from-indigo-500 to-purple-500">
		<div class="mx-auto grid grid-cols-1 lg:grid-cols-1 ml-6 lg:ml-auto">
			<div clasName="flex justify-center place-items-center static mb-[-10]">
				<h1 class="text-5xl text-white">Join {{name}}'s Session</h1>
				<h4 class="texl-xl text-white">To join this session, enter your name.</h4>
				<br />
				<div class="w-full">
					<div class="w-1/3 pb-2">
						<label class="text-white" for="name">Name</label>
					</div>
					<div class="w-2/3">
						<input id="name" type="text"
							class="px-2 text-white rounded-lg mb-10 py-2 bg-white bg-opacity-0 outline-white" />
					</div>
					<button type="button" onclick="join_qr('{{join_id}}')"
						class="lg:mb-0 mb-10 border-white text-white font-bold py-2 px-4 rounded-full w-44 border-2 hover:bg-green-spotify">
						JOIN SESSION
					</button>
				</div>
			</div>
			<div class="hidden transition-all mt-10" role="alert" id="errors">
				<div class="bg-red-main text-white font-bold rounded-t px-4 py-2" id="error-header">
				</div>
				<div class="border-red border-t-0 border-red-400 text-white rounded-b bg-red-main px-4 py-3 text-red-700" id="error-message">
				</div>
			</div>
		</div>
	</div>
</div>