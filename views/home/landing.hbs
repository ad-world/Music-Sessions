<div class="h-screen bg-gradient-to-r from-indigo-500 to-purple-500">
    <div class="container mx-auto">
        <div class="flex justify-between">
            <div class="p-6 text-white">Music Sessions</div>
        </div>
            <div class="container flex items-center justify-center">
                <div class="grid grid-rows-2 lg:p-12 p-4 bg-white lg:w-1/2 rounded-3xl lg:mt-16 md:mt-12">
                    <div class="col-span-2">
                        {{#if errors}}
                        <div class="mx-auto rounded-lg p-4 bg-red-main items-center justify-center">
                            <div class="font-incosolata text-3xl text-black mx-auto items-center justify-center">
                                {{errors}}
                            </div>
                        </div>
                        {{/if}}
                        <div class="justify-center font-incosolata text-black text-2xl">
                            Welcome to Music Sessions!
                        </div>
                        <br>
                        <div class="justify-center font-work-sans text-black">
                            A platform where you can create 
                            collaborative queues at parties and gatherings! To host a session,
                            click on CREATE SESSION. To join a session, click on JOIN A SESSION.
                            You must have Spotify premium to use this service!
                        </div>
                        {{#if session.connected_id}}
                            <div class="mx-auto text-center">
                                <div class="text-xl text-black mb-4">
                                    You may already be connected to a session. Click below to rejoin.
                                </div>
                                <a href="/session/user/{{session.queue_id}}">
                                    <button type="button"
                                    class="lg:mb-0 mb-10 border-white text-black font-bold py-2 px-4 rounded-full w-44 border-2 hover:bg-red-main">
                                    REJOIN SESSION
                                </button>
                                </a>
                            </div>    
                        {{/if}} 
                    </div>
                    <div class="">
                        <div class="text-black text-xl">
                            Join A Session
                            <div>
                                <div class="w-full">
                                    <div class="w-1/3 pb-2">
                                        <label class="text-black text-sm" for="name">Name</label>
                                    </div>
                                    <div class="w-2/3">
                                        <input id="name" type="text"
                                            class="text-sm p-2 text-black rounded-lg bg-white bg-opacity-0 border-solid border-2 border-black" />
                                    </div>
                                    <div class=" pb-2">
                                        <label class="text-black text-sm" for="code">Session Code</label>
                                    </div>
                                    <div class="w-2/3">
                                        <input id="code" type="text"
                                            class="text-sm p-2 text-black rounded-lg mb-10 bg-white bg-opacity-0 border-solid border-2 border-black" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="button"
                                    class="mb-4 border-white text-white font-bold bg-gradient-to-r from-indigo-500 to-purple-500 py-2 px-4 rounded-full w-44 border-2 hover:bg-pink-500">
                                    JOIN SESSION
                        </button>
                    </div>
                    <div class="">
                        <div class="text-black text-xl">
                            Create A Session
                        </div>
                        <h4 class="texl-xl text-black">To create a session, please login with spotify</h4>
                        <br />
                        <div class="">
                            <a href="/api/auth/spotify" class="">
                                <button type="button"
                                    class="border-white text-white font-bold bg-gradient-to-r from-indigo-500 to-purple-500 py-2 px-4 rounded-full w-44 border-2 hover:bg-pink-500">
                                    CREATE SESSION
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

